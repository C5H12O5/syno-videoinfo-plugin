{
  "type": "tvshow",
  "site": "themoviedb.org",
  "config": {
    "apikey": {
      "icon": "key",
      "name": "API Key"
    }
  },
  "steps": [
    {
      "retval": {
        "ifempty": "apikey"
      }
    },
    {
      "doh": {
        "host": "api.tmdb.org"
      }
    },
    {
      "http": {
        "url": "https://api.tmdb.org/3/search/tv?api_key={apikey}&language={lang}&query={title}&year={year}&page=1",
        "method": "GET",
        "headers": {
          "Accept": "application/json"
        },
        "timeout": 20,
        "result": "metadata"
      }
    },
    {
      "collect": {
        "source": "metadata",
        "into": {
          "ids": "['xp_texts', './results//id']"
        }
      }
    },
    {
      "loop": {
        "source": "ids",
        "item": "id",
        "steps": [
          {
            "http": {
              "url": "https://api.tmdb.org/3/tv/{id}?api_key={$parent[apikey]}&language={$parent[lang]}",
              "method": "GET",
              "headers": {
                "Accept": "application/json"
              },
              "timeout": 20,
              "result": "subject"
            }
          },
          {
            "collect": {
              "source": "subject",
              "into": {
                "tvshow": {
                  "title": "['xp_text', './name']",
                  "original_available": "['xp_text', './first_air_date']",
                  "summary": "['xp_text', './overview']",
                  "extra": {
                    "[plugin_id]": {
                      "poster": ["['xp_text', './poster_path', 'prefix', 'https://image.tmdb.org/t/p/w500']"],
                      "backdrop": ["['xp_text', './backdrop_path', 'prefix', 'https://image.tmdb.org/t/p/original']"]
                    }
                  }
                }
              }
            }
          },
          {
            "retval": {
              "source": "tvshow"
            }
          }
        ]
      }
    }
  ]
}